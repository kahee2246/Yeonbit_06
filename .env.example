# ================================
# Discord Bot 설정 (필수)
# ================================
# Discord Developer Portal에서 생성한 봇 토큰을 입력하세요
# https://discord.com/developers/applications 에서 Bot > Token에서 확인 가능
USER_TOKEN=your_discord_bot_token_here

# 메시지를 보낼 Discord 채널의 ID (채널 우클릭 > ID 복사)
# 개발자 모드가 켜져 있어야 합니다
CHANNEL_ID=your_target_channel_id_here

# ================================
# 메시지 설정
# ================================
# 전송할 메시지 내용 (이모지와 텍스트 모두 사용 가능)
MESSAGE_CONTENT="🚀 Railway에서 실행 중인 Discord 봇입니다!"

# 메시지 전송 간격 (초 단위)
# 예: 1800 = 30분마다, 3600 = 1시간마다
SEND_INTERVAL=1800

# ================================
# 보안 설정
# ================================
# 관리자 페이지 로그인에 사용할 아이디
ADMIN_USERNAME=admin

# 관리자 페이지 로그인에 사용할 비밀번호 (강력한 비밀번호로 변경하세요)
ADMIN_PASSWORD=your_secure_password_here

# ================================
# Railway 배포 설정
# ================================
# Railway에서 자동으로 설정되므로 변경하지 마세요
PORT=8080

# ================================
# 기타 설정 (선택사항)
# ================================
# 디버그 모드 (개발 시에만 true로 설정)
DEBUG_MODE=false

# 봇 활성화 여부
IS_ENABLED=true

# 웹 대시보드 인증 (선택사항, 기본값: admin/password)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password

# ================================
# 서버 포트 설정
# ================================
FLASK_PORT=5000
NEXT_PORT=3000
PORT=8080

# ================================
# 개발 환경 설정
# ================================
NODE_ENV=development
FLASK_ENV=development
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# ================================
# Railway 배포용 (프로덕션에서만 사용)
# ================================
RAILWAY_STATIC_URL=
NEXT_TELEMETRY_DISABLED=1
